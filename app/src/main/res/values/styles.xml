<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tealish</item>
        <item name="colorPrimaryDark">@color/tealish</item>
        <item name="colorAccent">@color/tealish</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="statusBarBackground">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.03</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppDoctorTextInputStyle">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:singleLine">true</item>tttt
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.WhiteStatusBar" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/ripple_tab_color</item>

    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <!--  <item name="tabIndicatorColor">?attr/colorAccent</item> -->
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabPaddingStart">20dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/tealish</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="tab_text_regular" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="tabTextColor">@color/black</item>
    </style>

    <style name="tab_text_bold" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="tabTextColor">@color/tealish</item>

    </style>



</resources>
